    "@mantine/hooks": "^5.9.2",
    "@mantine/notifications": "5.9.2",
    "@mantine/nprogress": "5.9.2",
    "@mantine/remix": "5.9.2",
    "@mantine/spotlight": "^5.9.2",
    "@mantine/tiptap": "^5.9.2",
    "@prisma/client": "^4.7.1",
    "@remix-run/express": "^1.8.1",
    "@remix-run/node": "^1.8.1",
    "@remix-run/react": "^1.8.1",
